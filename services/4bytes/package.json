{
  "name": "sourcify-4bytes",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone service exposing Sourcify signature database endpoints",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "scripts": {
    "prebuild": "copyfiles -u 1 src/**/*.yaml src/**/*.json dist",
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "mocha --require ts-node/register --exit --recursive test/**/*.spec.ts"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "ethers": "6.15.0",
    "express": "5.1.0",
    "http-status-codes": "2.3.0",
    "pg": "8.16.3",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.20",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/mocha": "10.0.10",
    "@types/node": "22.18.1",
    "@types/pg": "8.15.5",
    "@types/swagger-ui-express": "4.1.8",
    "@types/yamljs": "0.2.34",
    "c8": "10.1.3",
    "chai": "4.5.0",
    "copyfiles": "2.4.1",
    "mocha": "10.8.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  }
}
