{
  "name": "sourcify-4bytes",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone service exposing Sourcify signature database endpoints",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "scripts": {
    "prebuild": "copyfiles -u 1 src/**/*.yaml src/**/*.json dist",
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "postgres-test:start": "docker-compose -f test/docker-compose.yml up -d",
    "postgres-test:stop": "docker-compose -f test/docker-compose.yml rm -fsv",
    "postgres-test:migrate": "export DATABASE_URL=postgres://fourbytes:fourbytes@127.0.0.1:${DOCKER_HOST_POSTGRES_TEST_PORT:-5433}/fourbytes_test?sslmode=disable && export DBMATE_MIGRATIONS_DIR=./test/migrations && npx dbmate up",
    "test:integration": "mocha --require ts-node/register -r ./test/load-env.js --exit --timeout 30000 test/integration/4bytes-api.spec.ts",
    "test": "npm run test:integration",
    "test-local": "export DOCKER_HOST_POSTGRES_TEST_PORT=${DOCKER_HOST_POSTGRES_TEST_PORT:-5433} && npm run postgres-test:start && sleep 3 && npm run postgres-test:migrate && npm run test:integration; status=$?; npm run postgres-test:stop; exit $status",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"./**/*.ts\" --write",
    "fix:lint": "eslint . --ext .ts --fix",
    "check": "run-s check:*",
    "check:eslint": "eslint . --ext .ts",
    "check:prettier": "prettier \"./**/*.ts\" --check",
    "check:tsc": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "ethers": "6.15.0",
    "express": "5.1.0",
    "http-status-codes": "2.3.0",
    "pg": "8.16.3",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.20",
    "@types/chai-http": "4.2.3",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/mocha": "10.0.10",
    "@types/node": "22.18.1",
    "@types/pg": "8.15.5",
    "@types/swagger-ui-express": "4.1.8",
    "@types/yamljs": "0.2.34",
    "c8": "10.1.3",
    "chai": "4.5.0",
    "chai-http": "5.1.1",
    "copyfiles": "2.4.1",
    "dbmate": "2.28.0",
    "mocha": "10.8.2"
  }
}
