# Database connection settings for delete-sourcify-match.ts script
# Copy this file to .env and fill in your values

# Database type: "postgres" or "bigquery"
DATABASE_TYPE=postgres

# Rollback changes before committing  
DRY_RUN=true

# PostgreSQL Configuration (when DATABASE_TYPE=postgres)
SOURCIFY_POSTGRES_HOST=localhost
SOURCIFY_POSTGRES_PORT=5432
SOURCIFY_POSTGRES_DB=sourcify
SOURCIFY_POSTGRES_USER=sourcify
SOURCIFY_POSTGRES_PASSWORD=sourcify

# BigQuery Configuration (when DATABASE_TYPE=bigquery)
BIGQUERY_PROJECT_ID=sourcify-project
BIGQUERY_DATASET=sourcify
BIGQUERY_LOCATION=europe-west1
# Find your dataset location: https://console.cloud.google.com/bigquery
# Authentication:
# Option A: Use service account key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Option B: Use gcloud default credentials (no extra config needed)
# Just run: gcloud auth application-default login