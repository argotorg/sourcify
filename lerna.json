{
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "release-*"
    }
  },
  "packages": ["services/*", "packages/*"],
  "version": "independent"
}
